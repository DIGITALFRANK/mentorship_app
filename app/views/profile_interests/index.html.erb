
<h2>Tell Us About Your Interests</h2>

<div class="profile_interests_background">
    <div class="container">
        <div class="interests_form">
            <%= bootstrap_form_for @interests do |f| %>
    
                <div class="interests">
                    <h2>You're into... (check all that apply)</h2>
                    <%= f.check_box :python, label: "Python" %>
                    <%= f.check_box :javascript, label: "JavaScript" %>
                    <%= f.check_box :react, label: "React" %>
                    <%= f.check_box :rails, label: "Rails" %>
                    <%= f.check_box :sql, label: "SQL" %>
                    <%= f.check_box :java, label: "Java" %>
                    <%= f.check_box :node_js, label: "NodeJS" %>
                    <%= f.check_box :scss, label: "Sass & SCSS" %>
                    <%= f.check_box :data_scraping, label: "Data Scraping" %>
                    <%= f.check_box :blockchain, label: "Blockchain" %>
                </div>
    
                <div class="interests">
                    <h2>You want to... (check all that apply)</h2>
                    <%= f.radio_button :mentor, true, label: "Mentor" %>
                    <%= f.radio_button :mentee, true, label: "Be Mentored" %>
                </div>
            
                <%= f.submit "save your interests", :class => "save_interests btn-sm btn-success" %>
            <% end %>
        </div>
    </div>
</div>
