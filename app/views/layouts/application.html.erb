<!DOCTYPE html>
<html>
  <head>
    <title>MentorshipApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <link href="https://fonts.googleapis.com/css?family=Sunflower:300" rel="stylesheet">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
        <nav id="top_nav" class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">MentorMe</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                <% if user_signed_in? %>
        
                  <li class="dropdown">
                        <a id="userDropdown" class="dropdown-toggle" data-toggle="dropdown" href="#">
                        <%= current_user.first_name %>
                        <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="userDropdown">
                            <div class="dropdown-divider"></div>
                            <li class="dropdown-item"><%= link_to 'Profile', users_profile_path, :class => 'nav-link' %></li>
                            <li class="dropdown-item"><%= link_to 'Log out', destroy_user_session_path, method: :delete, :class => 'nav-link' %></li>                
                        </ul>
                  </li>
                  <li class="nav-item message_board">
                        <a href="/chat_rooms"><button class="btn btn-sm btn-outline-dark message_board_button">the great message board</button></a>
                  </li>

                <% else %>

                  <li class="nav-item login_form">
                      <a href="/users/sign_in"><button class="btn btn-sm btn-outline-dark login_button">sign in</button></a>
                  </li>

                <% end %>

            </ul>
        </div>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>
  
  <footer>
  </footer>
</html>
