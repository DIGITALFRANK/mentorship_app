
<div class="container-fluid profile_container">
    <div class="user_info">
        <a href="#" class="img_pop"><img class="profile_avatar" src="http://via.placeholder.com/100x100"><%# Click to Enlarge %></a>
        <ul>
            <li class="real_name"><%= @user.first_name %> <%= @user.last_name %></li>
            <li class="username"><%= @user.username %></li>
            <li>
                <% @user.profile_interest.attributes.each do |interest, value| %>
                    <% if value == true %>
                        <%= interest %>
                    <% end %>
                <% end %>
            </li>
        </ul>
    </div>


    <div class="suggestions">
        <ul>
            
            <% @results.each do |result| %>
                <li>
                    <div class="user_info">
                    <a href="#" class="img_pop"><img class="profile_avatar" src="http://via.placeholder.com/100x100"><%# Click to Enlarge %></a>
                    </div>
            
                   <% other_user = User.find(result.user_id) %>
                  
                    <div>Username: <%= other_user.username %></div>
                
                    <%= link_to 'View Profile', users_show_path(other_user), remote: true, :class => 'btn btn-sm btn-secondary' %>
                    <br>
                    <div> 
                    <% other_user.profile_interest.attributes.each do |interest, value| %>
                        <% if value == true %>
                            <%= interest %>
                        <% end %>
                    <% end %>
                    </div>
                    <div><% if @user.profile_interest[:mentee] && can_score?(other_user.id) %>
                    <button class="ranking_btn" value="1">Like</button>
                    <button class="ranking_btn" value="0">Dislike</button>
                    <% end %>
                    </div>
                </li>
            <% end %>
        </ul>
    </div>
</div>

<%= render "other_profile/modal" %>
